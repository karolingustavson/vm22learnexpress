{% extends "partials/layout.njk"%}
{% block title%}Home{% endblock %}
{% block content %}
<style>
    table, th, tb {
        border: 1px solid black;
    }
</style>
   <a href="/movies/add" >Add </a>

<table>
    <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Year</th>
        <th>Action</th>
    </thead>
    <tbody>
         {% for movie in movies %}
        <tr>
            <td>{{movie.name}}</td>
            <td>{{movie.year}}</td>
            <td>
                <a href="/movies/view?id={{movie.id}}">View</a>
                <a href="">Edit</a>
                <a href="">Delete</a>
            </td>
        </tr>
         {% endfor %}
    </tbody>
</table>



{% endblock %}
